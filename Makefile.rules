#
# Makefile rules for compiling examples.
#

vpath %.f90 $(VPATHS)
vpath %.c   $(VPATHS)

$(EXE): $(OBJ)
	$(FC) $(FFLAGS) $^ $(OUTPUT_OPTION) $(LDFLAGS)

build/%.o: %.f90
	@mkdir -p build
	$(FC) $(FFLAGS) -c $< $(OUTPUT_OPTION)

build/%.o: %.c
	@mkdir -p build
	$(CC) $(CFLAGS) -c $< $(OUTPUT_OPTION)

.PHONY: clean

clean:
	rm -rf build $(EXE)
